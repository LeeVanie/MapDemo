<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lee.map01.MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:background="#fff">
        <TextView
            android:id="@+id/btn_jiayou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="加油"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d9"/>
        <TextView
            android:id="@+id/btn_food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="美食"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d9"/>
        <TextView
            android:id="@+id/btn_jiudian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="酒店"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d9"/>
        <TextView
            android:id="@+id/btn_yiyuan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="医院"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d9"/>
        <TextView
            android:id="@+id/btn_yinhang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="银行"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d9"/>
        <TextView
            android:id="@+id/btn_sreach"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="搜索"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/map_normal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="普通图"/>
        <Button
            android:id="@+id/map_satellite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="卫星图"/>
        <Button
            android:id="@+id/map_blank"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="空白图"
            android:visibility="gone"/>
        <Button
            android:id="@+id/map_traffic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="交通图"/>
        <Button
            android:id="@+id/map_heat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="热力图"/>
        <Button
            android:id="@+id/location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="定位"/>
    </LinearLayout>
    
    <ListView
        android:id="@+id/main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:divider="#eaeaec"
        android:dividerHeight="1dp"
        android:background="#fff"
        android:visibility="gone"/>

</RelativeLayout>
